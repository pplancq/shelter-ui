{
  "name": "@pplancq/shelter-ui-react",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "description": "Modular, scalable React components",
  "author": "pplancq <paul.plancq@outlook.fr>",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pplancq/shelter-ui",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/pplancq/shelter-ui/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "homepage": "https://pplancq.github.io/shelter-ui/",
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "lint": "concurrently --prefix-colors auto \"npm:eslint\" \"npm:tsc\"",
    "eslint": "eslint \"{src,tests}/**/*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"{src,tests}/**/*.{js,jsx,ts,tsx}\" --fix",
    "tsc": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "postversion": "npm i --save-peer @pplancq/shelter-ui-icon@$npm_package_version"
  },
  "engines": {
    "node": ">= 22"
  },
  "peerDependencies": {
    "@pplancq/shelter-ui-icon": "^1.0.0-alpha.4",
    "react": "^19.0.0"
  },
  "dependencies": {
    "@pplancq/svg-react": "^2.2.0"
  },
  "devDependencies": {
    "@pplancq/eslint-config": "^5.0.12",
    "@pplancq/prettier-config": "^1.2.8",
    "@rsbuild/plugin-react": "^1.4.2",
    "@rslib/core": "^0.17.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.8",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8",
    "vitest-sonar-reporter": "^3.0.0"
  },
  "prettier": "@pplancq/prettier-config",
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --fix",
    "*.{ts,tsx}": "tsc-files --noEmit",
    "*.!(js|jsx|ts|tsx)": "prettier --write --ignore-unknown"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
