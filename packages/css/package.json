{
  "name": "@pplancq/shelter-ui-css",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "description": "Global styles and tokens",
  "author": "pplancq <paul.plancq@outlook.fr>",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pplancq/shelter-ui",
    "directory": "packages/css"
  },
  "bugs": {
    "url": "https://github.com/pplancq/shelter-ui/issues"
  },
  "sass": "./sass/shelter-ui.sass",
  "style": "./css/shelter-ui.css",
  "files": [
    "sass",
    "css",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "homepage": "https://pplancq.github.io/shelter-ui/",
  "scripts": {
    "dev": "rslib build --watch",
    "build": "rslib build",
    "lint": "concurrently --prefix-colors auto \"npm:stylelint\" \"npm:eslint\"",
    "eslint": "eslint \"tests/**/*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"tests/**/*.{js,jsx,ts,tsx}\" --fix",
    "stylelint": "stylelint \"{sass,tests}/**/*.{scss,css}\"",
    "stylelint:fix": "stylelint \"{sass,tests}/**/*.{scss,css}\" --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">= 22"
  },
  "dependencies": {
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fontsource/nunito": "^5.2.7",
    "@fontsource/oswald": "^5.2.8",
    "@fontsource/raleway": "^5.2.8"
  },
  "devDependencies": {
    "@pplancq/eslint-config": "^6.0.1",
    "@pplancq/postcss-config": "^3.0.2",
    "@pplancq/prettier-config": "^2.0.0",
    "@pplancq/stylelint-config": "^5.0.0",
    "@rsbuild/plugin-sass": "^1.5.0",
    "@rslib/core": "^0.19.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "postcss-discard-duplicates": "^7.0.2",
    "prettier": "^3.8.1",
    "sass-true": "^10.1.0",
    "stylelint": "^17.1.0",
    "stylelint-prettier": "^5.0.3",
    "vitest": "^4.0.18"
  },
  "prettier": "@pplancq/prettier-config",
  "lint-staged": {
    "*.(scss|css)": "stylelint --fix",
    "*.!(scss|css)": "prettier --write --ignore-unknown"
  }
}
