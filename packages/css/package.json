    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "stylelint": "^16.16.0",
    "stylelint-prettier": "^5.0.3"
  },
  "prettier": "@pplancq/prettier-config",
  "lint-staged": {
    "*.(scss|css)": "stylelint --fix",
